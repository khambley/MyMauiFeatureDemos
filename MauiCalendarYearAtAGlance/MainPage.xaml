                 Grid.Column="1"
                 Color="LightBlue" />
        <Label Grid.Row="2"
               Grid.Column="1"
               Text="August"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <BoxView Grid.Row="2"
                 Grid.Column="2"
                 Color="BlueViolet" />
        <Label Grid.Row="2"
               Grid.Column="2"
               Text="September"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <BoxView Grid.Row="3"
                 Grid.Column="0"
                 Color="Teal" />
        <Label Grid.Row="3"
               Grid.Column="0"
               Text="October"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <BoxView Grid.Row="3"
                 Grid.Column="1"
                 Color="GreenYellow" />
        <Label Grid.Row="3"
               Grid.Column="1"
               Text="November"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <BoxView Grid.Row="3"
                 Grid.Column="2"
                 Color="SteelBlue" />
        <Label Grid.Row="3"
               Grid.Column="2"
               Text="December"
               HorizontalOptions="Center"
               VerticalOptions="Start" />
        
    </Grid>
    <Grid x:Name="sixRowGrid"
          IsVisible="True"
          RowDefinitions="250, 250, 250, 250, 250, 250"
          ColumnDefinitions=".5*, .5*">

        <!--<BoxView Color="AliceBlue"
                 Grid.Row="0"
                 Grid.Column="0" />
        <Label Text="January"
               Grid.Row="0"
               Grid.Column="0"
               HorizontalOptions="Center"
               VerticalOptions="Start" />-->
        <controls:MonthGridView Grid.Row="0"
                                Grid.Column="0" />

        <BoxView Color="LightSkyBlue"
                 Grid.Row="0"
                 Grid.Column="1" />
        <Label Grid.Row="0"
               Grid.Column="1"
               Text="February"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <BoxView Grid.Row="1"
                 Grid.Column="0"
                 Color="CadetBlue" />
        <Label Grid.Row="1"
               Grid.Column="0"
               Text="March"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <BoxView Grid.Row="1"
                 Grid.Column="1"
                 Color="CornflowerBlue" />
