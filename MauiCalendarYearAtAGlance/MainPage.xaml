<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiCalendarYearAtAGlance.Controls"
             x:Class="MauiCalendarYearAtAGlance.MainPage">
<ScrollView>
<Grid>
    <Grid x:Name="fourRowGrid"
          IsVisible="False"
          RowDefinitions=".25*, .25*, .25*, .25*"
          ColumnDefinitions=".3*, .3*, .3*">

        <BoxView Color="AliceBlue" />
        <Label Text="January"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <BoxView Grid.Column="1"
                 Color="LightSkyBlue" />
        <Label Grid.Column="1"
               Text="February"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <BoxView Grid.Column="2"
                 Color="CadetBlue" />
        <Label Grid.Column="2"
               Text="March"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <BoxView Grid.Row="1"
                 Color="CornflowerBlue" />
        <Label Grid.Row="1"
               Text="April"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <BoxView Grid.Row="1"
                 Grid.Column="1"
                 Color="DodgerBlue" />
        <Label Grid.Row="1"
               Grid.Column="1"
               Text="May"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <BoxView Grid.Row="1"
                 Grid.Column="2"
                 Color="DarkSlateBlue" />
        <Label Grid.Row="1"
               Grid.Column="2"
               Text="June"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <BoxView Grid.Row="2"
                 Color="SteelBlue" />
