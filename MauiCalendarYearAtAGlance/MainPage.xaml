               Grid.Column="0"
               Text="November"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <BoxView Grid.Row="5"
                 Grid.Column="1"
                 Color="SteelBlue" />
        <Label Grid.Row="5"
               Grid.Column="1"
               Text="December"
               HorizontalOptions="Center"
               VerticalOptions="Start" />
        
    </Grid>

</Grid>

</ScrollView>

    

</ContentPage>

